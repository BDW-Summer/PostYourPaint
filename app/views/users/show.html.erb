<% provide(:title, @user.email) %>
<div class="row">
    <aside class="span4">
        <section>
            <h1><%= @user.email %></h1>
            <span>
                <%= pluralize(current_user.paints.count, "paint") %>
            </span>
            <%= link_to "Add Paint", paint_new_path, 
                                     class: "btn btn-large btn-primary" %>
        </section>
    </aside>
    <div class="span8">
        <% if @user.paints.any? %>
            <h3>Paints (<%= @user.paints.count %>)</h3>
            <ol class="paints">
                <%= render @paints %>
            </ol>
            <%= will_paginate @paints %>
        <% end %>
    </div>
</div>