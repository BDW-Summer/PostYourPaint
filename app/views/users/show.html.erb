<% provide(:title, @user.email) %>
<div class="row">
    <aside class="span4">
        <section>
            <h1><%= @user.email %></h1>
        </section>
    </aside>
    <div class="span8">
        <% if @user.paints.any? %>
            <h3>Paints (<%= @user.paints.count %>)</h3>
            <ol class="paints">
                <%= render @paints %>
            </ol>
            <%= will_paginate @paints %>
        <% end %>
    </div>
</div>