<li id="<% inventory_item.id %>" class="paint-post clearfix" >
    <section class="swatch-container">
        <div class="swatch">
            <figure class="swatch-color"></figure>
            <figcaption class="swatch-hex">#<%= inventory_item.hex %></figcaption>
        </div>
    </section>
    <section class="paint-details-container">
        <ul class="paint-post-info clearfix">
            <li><%= inventory_item.name %></li>
            <li><%= inventory_item.location %></li>
            <li><%= inventory_item.quantity %> Gal</li>
        </ul>
        <p><%= wrap(inventory_item.additional_info) %></p>
        <p>Posted <%= time_ago_in_words(inventory_item.created_at) %> ago.
        <% if current_user?(inventory_item.user) %>
            <%= link_to "delete", inventory_item, method: :delete,
                                                  data: { confirm: "You sure?" },
                                                  title: inventory_item.name %>
        <% end %>
        </p>
    </section>
</li>