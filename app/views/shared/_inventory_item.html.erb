<li id="<% inventory_item.id %>">
    <span class="user">
        <% link_to inventory_item.user.email, inventory_item.user %>
    <span>
    <span class="content"><%= inventory_item.color_family %></span>
    <span class="content"><%= inventory_item.name %></span>
    <span class="content"><%= inventory_item.hex %></span>
    <span class="content"><%= inventory_item.location %></span>
    <span class="content"><%= inventory_item.quantity %></span>
    <span class="content"><%= inventory_item.additional_info %></span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(inventory_item.created_at) %> ago.
    </span>
    
    <% if current_user?(inventory_item.user) %>
        <%= link_to "delete", inventory_item, method: :delete,
                                              data: { confirm: "You sure?" },
                                              title: inventory_item.name %>
    <% end %>
</li>